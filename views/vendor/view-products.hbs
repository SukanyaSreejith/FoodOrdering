<section>
    <div class="container" id="table-align">
         <div class="row mt-4">
           <a href="/vendor/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
   <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Product Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th>Image</th>
      <th scope="col">Actions</th>
     
    </tr>
  </thead>
  <tbody>
     {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.quantity}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""</td>
      <td>
        <a href="/vendor/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/vendor/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete {{this.name}}')">Delete</a>
        </td>
    </tr>

    {{/each}}
          
  </tbody>
</table>
    </div>
</section>